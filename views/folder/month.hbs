<header>
    <div class="title">
        <a href="/{{user._id}}/folder">
            <p><i class="fas fa-angle-left fa-2x icon"></i></p>
        </a>
        <h1>{{month.name}}/{{month.year}}</h1>
        <span id="delete" class="fas fa-trash-alt fa-2x icon"></span>
    
    </div>    
</header>
<section  class="container">
     <div class="card-list">
    {{#each month.day}}
       
            <a href="/{{ ../month.userId}}/folder/{{../month._id}}/{{name}}">
                <div class="card">

                    <form class="delete" style="display:none" action="/{{ ../month.userId}}/folder/{{../month._id}}/{{name}}/delete" method="POST">
                        <button>X</button>
                        
                    </form>
                    <div class="day-card">
                        <div class="day-title">
                            <h4>Day </h4>
                            <h3>{{name}}</h3>
                        </div>
                        <div class="day-nutrients">
                            <div class="kcal-text">
                                <h4>{{totalKcal}}</h4>
                                <p >Kcal</p>

                            </div>
                            <div class="carb-text">
                                 <h4>{{totalCarbs}}</h4>
                                <p >Carbs</p>   
                            </div>
                            <div class="protein-text">
                                <h4>{{totalProtein}}</h4>
                                <p >Protein</p>
                            </div>
                            <div class="fat-text">
                                <h4>{{totalFat}}</h4>
                                <p >Fat</p>
                            </div>
                        </div>

                    </div>
                    
                </div>
            </a>
        

    {{/each}}
    </div>
</section>
<section  class="form-container">
    
    <div class="add-box">
        <form class="add-form" action="/{{user._id}}/folder/{{month._id}}/createlog" method="POST">
            <div>
                <label for="day-input">Day</label>
                <select name="day" id="day">
                    <option value="01">01</option>
                    <option value="02">02</option>
                    <option value="03">03</option>
                    <option value="04">04</option>
                    <option value="05">05</option>
                    <option value="06">06</option>
                    <option value="07">07</option>
                    <option value="08">08</option>
                    <option value="09">09</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                    <option value="24">24</option>
                    <option value="25">25</option>
                    <option value="26">26</option>
                    <option value="27">27</option>
                    <option value="28">28</option>
                    <option value="29">29</option>
                    <option value="30">30</option>
                    <option value="31">31</option>
                </select>

            </div>
            
            <button class="square-btn">ADD</button>
            
        </form>
    </div>

</section>
<script src="https://kit.fontawesome.com/49cb587e31.js" crossorigin="anonymous"></script>

<script>
    $delete = document.getElementById("delete");
    $links = document.getElementsByClassName("delete");
    
    clicked = false;
    $delete.addEventListener("click", (event)=>{
        clicked = !clicked;
        if(clicked){
            for(let link of $links){
                link.style = "";
                
            }
        }else{
            for(let link of $links){
                link.style = "display:none";
            }
        }
        
        console.log("delete");
    });
</script>

